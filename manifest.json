{
  "name": "Pin My Hard-coded Tabs",
  "description": "Pins and re-order a hard-coded list of tabs",
  "version": "2.0",
  "browser_action": {
    "default_icon": "images/icon.png",
    "default_title": "Open Jon's favorite tabs"
  },
  "permissions": [
    "activeTab", "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "manifest_version": 2
}
