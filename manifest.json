{
  "name": "Ping My Favorite Tabs",
  "description": "Pins and re-order a hard coded list of tabs",
  "version": "2.0",
  "permissions": [
    "activeTab", "tabs"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Open Jon's favorite tabs"
  },
  "manifest_version": 2
}
